<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <data>
 <record id='wbs_template_picker_form_view' model='ir.ui.view'>
            <field name='name'>wbs.template.picker.form</field>
            <field name='model'>wbs.template.picker.wizard</field>
            <field name='arch' type='xml'>
                <form>
                    <sheet>
                            <separator string='Wbs Template'/>
                        <group>
                            <group colspan="10">
                                <field name="project_id" invisible="1"/>
                                <field name='wbs_template_id' nolabel="1"/>
                            </group>
                        </group>

                    </sheet>
                    <footer>
                        <button string='Add To Project' name='add_to_project' type='object' class='oe_highlight'/>
                        <button string='Cancel' special='cancel'/>
                    </footer>

                </form>
            </field>
        </record>
        <record id='wbs_template_picker_action' model='ir.actions.act_window'>
            <field name='name'>Wbs Template Picker</field>
            <field name='res_model'>wbs.template.picker.wizard</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>