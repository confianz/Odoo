<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id='project_milestone_form' model='ir.ui.view'>
            <field name='name'>project.milestone.form</field>
            <field name='model'>project.milestone</field>
            <field name='arch' type='xml'>
                <form>
                    <header>
                        <button string='Create Invoice' name='create_milestone_invoice' type='object' class='oe_highlight' attrs="{'invisible': [('invoiced', '=', True)]}" context="{'model': 'project.milestone'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object"
                            name="action_view_tasks" icon="fa-tasks">
                            <field string="Tasks" name="task_count" widget="statinfo" options="{'label_field': 'label_tasks'}"/>
                        </button>
                        <button name="action_view_invoice" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('invoice_count', '=', 0)]}">
                            <field name="invoice_count" widget="statinfo" string='Invoice' attrs="{'invisible': [('invoice_number', '!=', False)]}"/>
                            <field name="invoice_number" widget="statinfo" string=' ' attrs="{'invisible': [('invoice_number', '=', False)]}"/>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                    </div>
                        <group>
                            <group>
                                <field name='name' required='1'/>
                            </group>
                            <group>
                            </group>
                            <group>
                                <field name='invoice_type' required='1'/>
                                <field name='invoice_percent' attrs="{'invisible': [('invoice_type', '=', 'fixed')], 'required': [('invoice_type', '=', 'percent')]}"/>
                                <field name='amount' attrs="{'required': [('invoice_type', '=', 'fixed')]}"/>
                            </group>
                            <group>
                                <field name='start_date' required='1'/>
                                <field name='end_date'/>
                                <field name='project_id' required='1'/>
                                <field name='invoiced' invisible='1'/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <record id='project_milestone_tree' model='ir.ui.view'>
            <field name='name'>project.milestone.tree</field>
            <field name='model'>project.milestone</field>
            <field name='arch' type='xml'>
                <tree>
                    <field name='name'/>
                    <field name='amount'/>
                    <field name='project_id'/>
                    <field name='start_date'/>
                    <field name='end_date'/>
                </tree>
            </field>
        </record>
        
        <record id='project_milestone_action' model='ir.actions.act_window'>
            <field name='name'>Milestones</field>
            <field name='res_model'>project.milestone</field>
            <field name='view_mode'>form</field>
            <field name='view_mode'>tree,form</field>
            <field name='help' type='html'>
                <p class='oe_view_nocontent_create'>
                    Create new Project Milestones
                </p>
            </field>
        </record>
        
        <menuitem id='project_milestone_base' name='Milestones' action='project_milestone_action' parent='project.menu_project_config'/>
        
