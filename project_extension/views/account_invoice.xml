<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id='account_invoice_milestone_extension' model='ir.ui.view'>
            <field name='name'>account.invoice.milestone.extension</field>
            <field name='model'>account.invoice</field>
            <field name='inherit_id' ref='account.invoice_form'/>
            <field name='arch' type='xml'>
                <xpath expr="//notebook/page[@name='other_info']/group/group[1]" position='inside'>
                    <field name='project_id' attrs="{'invisible': [('project_id', '=', False)]}"/>
                    <field name='milestone_id' attrs="{'invisible': [('milestone_id', '=', False)]}"/>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>
