<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record id="base.paperformat_euro" model="report.paperformat">
            <field name="margin_top">40</field>
            <field name="margin_bottom">60</field>
        </record>
        <record id="base.main_company" model="res.company">
           <field name="external_report_layout_id" ref="project_extension.external_layout_invoice_new_box"/>
        </record>
       <record id="account.account_invoices" model="ir.actions.report">
            <field name="paperformat_id" ref="base.paperformat_euro"/>
        </record>
        <record id="account.account_invoices_without_payment" model="ir.actions.report">
            <field name="paperformat_id" ref="base.paperformat_euro"/>
        </record>
        <template id="wbs_post">
            <h2 style="text-align:center;font-size:20px;">WBS ELEMENTS VERSION <t t-if='version!=0' t-esc='version'/></h2>
                <table class='table' align="center">
                    <tbody>
                        <tr style="font-weight:bold;background-color: #00CED1" align="center">
                            <th>Task Name</th>
                            <th>Description</th>
                            <th>Hour</th>
                        </tr>
                        <tr t-foreach="body" t-as="ob" style="background-color: #E0FFFF;">
                            <td align="center"><b><t t-esc="ob.task_name"></t></b></td>
                            <td align="left"><t t-foreach="ob.description.split('\n')" t-as="des"><div style="padding-left:20px;"><t t-esc="des"/></div></t></td>
                            <td align="center"><span t-field="ob.hour" t-options="{'widget': 'duration', 'digital': True, 'unit': 'hour', 'round': 'minute'}"></span></td>
                        </tr>
                        <tr  style="font-weight: 280;font-size: 15px;background-color: #00CED1;">
                            <td class="text-center"><strong>Total </strong></td>
                            <td class="text-right" colspan="2"><strong t-esc="sum(body.mapped('hour'))" t-options="{'widget': 'duration', 'digital': True, 'unit': 'hour', 'round': 'minute'}"/><b> hr</b></td>
                        </tr>
                    </tbody>
                </table>
        </template>
    </data>
</odoo>
