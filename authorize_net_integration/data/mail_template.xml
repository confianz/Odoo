<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        
        <record id="email_template_edi_invoice" model="mail.template">
            <field name="name">Invoice: Send by email authorize payment</field>
            <field name="model_id" ref="account.model_account_invoice"/>
            <field name="email_from">${object.user_id.email_formatted |safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="subject">Invoice from ${object.company_id.name}</field>
<!--            <field name="subject">${object.company_id.name} Invoice (Ref ${object.number or 'n/a'})</field>-->
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Hi ${object.partner_id.name}
        % if object.partner_id.parent_id:
            (${object.partner_id.parent_id.name})
        % endif
        ,
        <br /><br />
        Please find attached 
        % if object.number:
            invoice <strong>${object.number}</strong>
        % else:
            invoice
        %endif
        % if object.project_id:
            for your project <strong>${object.project_id.name}</strong>
        % endif
        in the amount of <strong>${format_amount(object.amount_total, object.currency_id)}</strong>.
        
        Payment is due upon ${object.date_due}.
        <br/>
        % if object.state=='paid':
            This invoice is already paid.
        % else:
            Please remit payment at your earliest convenience.
        % endif
        <br /><br />
        Do not hesitate to contact us if you have any question.
    </p>
    % if object.check_if_authorize_configured():
    <p style="margin-top: 20px;">
    You can pay your invoice by this payment link.
    </p>
    <div>
        <a style="display:block;margin-top: 20px; width: 280px; height:20px; margin-left: 0px; color: #DDD; font-family: Verdana, Geneva, sans-serif; font-size: 12px; font-weight: bold; text-align: center; text-decoration: none !important; line-height: 1; padding: 5px 0px 0px 0px; background-color:#21b799; border-radius: 5px 5px; background-repeat: repeat no-repeat;"
         href="${object.get_invoice_payment_url()}" target="new">Click Here to Make Payments</a>
     </div>
    % endif
</div>
            </field>
            <field name="report_template" ref="account.account_invoices"/>
            <field name="report_name">Invoice_${(object.number or '').replace('/','_')}${object.state == 'draft' and '_draft' or ''}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>
        
    </data>
</odoo>
