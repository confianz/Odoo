<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="PaymentResultView">
            <t t-call-assets="web.assets_common"/>
            <t t-call-assets="web.assets_backend"/>
            <t id="custom_title" name="change title" inherit_id="web.layout">
                <xpath expr="//title" position="replace">
                    <title>Authorize.Net</title>
                </xpath>
            </t>
            <t t-call="web.layout">
                <t t-set="head">
                    <title>AuthorizePayments</title>
                    <link rel="stylesheet" href="/authorize_net_integration/static/src/css/payment.css" />
                    <meta name="viewport" content="width=device-width, initial-scale=1"/>
                </t>
                <div class='page'>
                    <div >
                        <p class="oe_form_paragraph"> </p>
                        <div class="edi_container" >
                            <div class="oe_edi_paperbox">
                                <h1 class="oe_edi_doc_title" style="color:#45618e;"><t t-esc="company_name"/> Payments</h1>
                                <div class="approve_details" >
                                    <div class="row" >
                                        <div class="col-xs-12 col-md-12">
                                            <t t-if="status=='paid'">
                                                <div style="text-align:center;"><img style="max-width:100%;height:auto;width:auto\9;" src="/authorize_net_integration/static/src/img/success.jpg"/></div>
                                                <div style="text-align:center;">
                                                    <h3 style="color:green;font-weight:bold;">Payment Successful</h3>
                                                </div>
                                            </t>
                                            <t t-if="status=='already'">
                                                <div style="text-align:center;"><img style="max-width:100%;height:auto;width:auto\9;" src="/authorize_net_integration/static/src/img/success.jpg"/></div>
                                                <div style="text-align:center;">
                                                    <h3 style="color:red;font-weight:bold;">Already Paid!!!!</h3>
                                                </div>
                                            </t>
                                            <t t-if="error">
                                                <div style="text-align:center;margin-top:3cm;margin-bottom:3cm"><h3 style="color:red">Some error occurred during transaction.</h3><br/>
                                                    <h3>Please contact us!</h3>
                                                </div>
                                            </t>
                                            <t t-if="status=='expired'">
                                                <div style="text-align:center;margin-top:3cm;margin-bottom:3cm"><h3 style="color:red">This link is already expired</h3><br/>
                                                    <h3>Please contact us!</h3>
                                                </div>
                                            </t>
                                            <t t-if="status=='invoice-paid'">
                                                <div style="text-align:center;margin-top:3cm;margin-bottom:3cm"><h3 style="color:red">This invoice is already paid.If you have any questions please contact us!</h3><br/>
                                                </div>
                                            </t>
                                            <t t-if="status=='not_exist'">
                                                <div style="text-align:center;margin-top:3cm;margin-bottom:3cm">
                                                <h3 style="color:red;font-weight:bold;">URL DOES NOT EXIST!!!!</h3>
                                                </div>
                                            </t>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </t>
        </template>
    </data>
</odoo>

